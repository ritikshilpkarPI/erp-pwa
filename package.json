  "scripts": {
    "start": "cross-env ENV_NAME=dev npm-run-all --parallel server client",
    "build": "npm run build:functions && npm run build:app",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "start:backend": "node server/app.ts",
    "local-dev": "nodemon server/app.js",
    "dev": "nodemon --exec npm run restart",
    "restart": "rimraf dist && npm run build && npm run start",
    "client": "react-scripts start ",
    "server": "netlify-lambda serve server -t 900",
    "build:app": "react-scripts build",
    "debug": "netlify dev --inspect",
    "build:functions": "netlify-lambda build server",
    "format": "git diff --name-only HEAD | grep '\\.jsx$, \\.js$' | xargs prettier --write",
    "imagesToCloudinary": "node server/scripts/imagesToCloudinaryAndDB.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
